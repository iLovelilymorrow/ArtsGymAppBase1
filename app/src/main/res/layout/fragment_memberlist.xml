<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_20sdp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchBarView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background_grey_corner"
        app:iconifiedByDefault="false"
        app:queryHint="@string/memberList_SearchMembers"/>

        <RadioGroup
            android:id="@+id/radioGroupFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/searchBarView1"
            android:layout_marginVertical="@dimen/_4sdp">

            <RadioButton
                android:id="@+id/radioButtonNoFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true"
                android:layout_marginEnd="@dimen/_4sdp"/>

            <RadioButton
                android:id="@+id/radioButtonFilterCurrentMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Month Reg"
                android:layout_marginEnd="@dimen/_4sdp"/>

            <RadioButton
                android:id="@+id/radioButtonFilterExpiringSoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiring Soon"/>
        </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exportButton"
        android:layout_width="wrap_content"
        android:layout_below="@id/searchBarView1"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_4sdp"
        android:layout_alignEnd="@id/searchBarView1"

        app:backgroundTint="@color/grey"
        android:text="@string/exportButton"
        android:background="@drawable/border_background_grey"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/importButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBarView1"
        android:layout_toStartOf="@id/exportButton"
        android:layout_marginVertical="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"

        app:backgroundTint="@color/grey"
        android:text="@string/importButton"
        android:background="@drawable/border_background_grey"
        android:textColor="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/membersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/radioGroupFilters"
        android:layout_alignParentBottom="true"
        tools:listitem="@layout/item_member"/>
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <TextView
        android:id="@+id/textViewNoExpiredMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_below="@id/radioGroupFilters"
        android:layout_centerInParent="true"
        android:text="No expired members found."
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>