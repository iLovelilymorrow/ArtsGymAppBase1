<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_20sdp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background_grey_corner"
        app:iconifiedByDefault="false"
        app:queryHint="@string/SearchExpiredMembers"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExpiredMembers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/searchBarView"
        android:layout_alignParentBottom="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_member_display" />

    <TextView
        android:id="@+id/textViewNoExpiredMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No expired members found."
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>